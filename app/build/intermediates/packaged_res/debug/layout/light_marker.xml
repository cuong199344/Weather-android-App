<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_dial_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/textViewLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E12181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/light"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/textViewBrightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brightness"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLight"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewColourRGB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/colour_rgb"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewBrightness"/>

    <TextView
        android:id="@+id/textViewColourTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/colour_temperature_k"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewColourRGB"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewColourTemp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/on_off"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewEmail"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tags"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewOnOff"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewBrightnessValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewLight"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/textViewColourRGBValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewBrightnessValue"
        android:textSize="19dp" />
    <TextView
        android:id="@+id/textViewColourTempValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewColourRGBValue"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/textViewEmailValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewColourTempValue"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/textViewOnOffValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewEmailValue"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/textViewTagsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewOnOffValue"
        android:textSize="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>