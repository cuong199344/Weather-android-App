<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_background_fragment"
    tools:context=".FragmentPage.MapFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageViewUITlogo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8"
            app:srcCompat="@drawable/uitlogo" />
        <TextView
            android:id="@+id/textViewUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewUITlogo"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/user_information"
            android:textSize="20dp"/>
        <View
            android:id="@+id/viewUser"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/custom_view_fragment_user"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintTop_toBottomOf="@id/textViewUserInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="10dp"
            />
        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/viewUser"
            app:layout_constraintStart_toStartOf="@id/viewUser"
            app:layout_constraintBottom_toTopOf="@id/textViewFirstName"
            android:text="@string/user_name"
            android:layout_marginLeft="20dp"
            android:textColor="@color/btn_background"
            android:textStyle="bold"
            android:elevation="15dp"/>
        <TextView
            android:id="@+id/textViewFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textViewUserName"
            app:layout_constraintStart_toStartOf="@id/viewUser"
            app:layout_constraintBottom_toTopOf="@id/textViewLastName"
            android:text="@string/first_name"
            android:layout_marginLeft="20dp"
            android:textColor="@color/btn_background"
            android:textStyle="bold"
            android:elevation="15dp"/>
        <TextView
            android:id="@+id/textViewLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textViewFirstName"
            app:layout_constraintStart_toStartOf="@id/viewUser"
            app:layout_constraintBottom_toTopOf="@id/textViewEmail"
            android:text="@string/last_name"
            android:layout_marginLeft="20dp"
            android:textColor="@color/btn_background"
            android:textStyle="bold"
            android:elevation="15dp"/>
        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/viewUser"
            app:layout_constraintTop_toBottomOf="@id/textViewLastName"
            app:layout_constraintBottom_toBottomOf="@id/viewUser"
            android:text="@string/email_info"
            android:layout_marginLeft="20dp"
            android:textColor="@color/btn_background"
            android:textStyle="bold"
            android:elevation="15dp"/>
        <TextView
            android:id="@+id/textViewUserNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/viewUser"
            app:layout_constraintEnd_toEndOf="@id/viewUser"
            app:layout_constraintStart_toEndOf="@id/textViewUserName"
            app:layout_constraintBottom_toTopOf="@id/textViewFirstName"
            android:text="None"
            android:textSize="20dp"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:elevation="15dp"/>
        <TextView
            android:id="@+id/textViewFirstNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textViewUserName"
            app:layout_constraintStart_toEndOf="@id/textViewUserName"
            app:layout_constraintEnd_toEndOf="@id/viewUser"
            app:layout_constraintBottom_toTopOf="@id/textViewLastName"
            android:text="None"
            android:textColor="#FF0000"
            android:textSize="20dp"
            android:textStyle="italic"
            android:elevation="15dp"/>
        <TextView
            android:id="@+id/textViewLastNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textViewFirstName"
            app:layout_constraintStart_toEndOf="@id/textViewUserName"
            app:layout_constraintEnd_toEndOf="@id/viewUser"
            app:layout_constraintBottom_toTopOf="@id/textViewEmail"
            android:text="None"
            android:textColor="#FF0000"
            android:textSize="20dp"
            android:textStyle="italic"
            android:elevation="15dp"/>
        <TextView
            android:id="@+id/textViewEmailValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/textViewUserName"
            app:layout_constraintTop_toBottomOf="@id/textViewLastName"
            app:layout_constraintEnd_toEndOf="@id/viewUser"
            app:layout_constraintBottom_toBottomOf="@id/viewUser"
            android:text="None"
            android:textColor="#FF0000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:elevation="15dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="Log out"
            android:textSize="25dp"
            android:backgroundTint="@color/btn_background"
            app:cornerRadius="10dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>